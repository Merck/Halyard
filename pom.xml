		<profile>
			<id>release</id>
			<distributionManagement>
			  <snapshotRepository>
			    <id>ossrh</id>
			    <url>https://oss.sonatype.org/content/repositories/snapshots</url>
			  </snapshotRepository>
			  <repository>
			    <id>ossrh</id>
