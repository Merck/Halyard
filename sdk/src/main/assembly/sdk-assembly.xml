<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/..</directory>
            <includes>
                <include>readme.md</include>
                <include>index.html</include>
                <include>LICENSE*</include>
                <include>img/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/scripts</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>rdf4j-repository-api*.jar</include>
            </includes>
        </fileSet>
        <!-- add properly built hbase-hadoop3 jars needed for map-reduce etc -->
        <fileSet>
            <directory>${project.build.directory}/hbase-libs</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>hbase-asyncfs-${hbase.version}.jar</include>
                <include>hbase-client-${hbase.version}.jar</include>
                <include>hbase-common-${hbase.version}.jar</include>
                <include>hbase-hadoop2-compat-${hbase.version}.jar</include>
                <include>hbase-hadoop-compat-${hbase.version}.jar</include>
                <include>hbase-http-${hbase.version}.jar</include>
                <include>hbase-logging-${hbase.version}.jar</include>
                <include>hbase-mapreduce-${hbase.version}.jar</include>
                <include>hbase-metrics-${hbase.version}.jar</include>
                <include>hbase-metrics-api-${hbase.version}.jar</include>
                <include>hbase-server-${hbase.version}.jar</include>
                <include>hbase-procedure-${hbase.version}.jar</include>
                <include>hbase-protocol-${hbase.version}.jar</include>
                <include>hbase-protocol-shaded-${hbase.version}.jar</include>
                <include>hbase-replication-${hbase.version}.jar</include>
                <include>hbase-zookeeper-${hbase.version}.jar</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <includes>
              <include>*:jar:*</include>
            </includes>
            <excludes>
                <exclude>org.apache.hbase:*:jar::${hbase.version}</exclude> <!-- exclude hbase-hadoop2 jars -->
                <exclude>*:sources</exclude>
                <exclude>*:javadoc</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>