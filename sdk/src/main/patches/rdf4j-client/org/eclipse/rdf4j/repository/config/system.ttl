#
# RDF4J configuration template for a Halyard HBase repository
#
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix rep: <http://www.openrdf.org/config/repository#>.
@prefix sr: <http://www.openrdf.org/config/repository/sail#>.
@prefix sail: <http://www.openrdf.org/config/sail#>.
@prefix halyard: <http://merck.github.io/Halyard/ns#>.

[] a rep:Repository ;
   rep:repositoryID "SYSTEM" ;
   rdfs:label "System configuration repository" ;
   rep:repositoryImpl [
      rep:repositoryType "openrdf:SailRepository" ;
      sr:sailImpl [
         sail:sailType "openrdf:HBaseStore" ;
         halyard:tableName "RDF4JSYSTEM" ;
         halyard:createTable "true" ;
         halyard:splitBits "0" ;
         halyard:pushStrategy "true" ;
         halyard:evaluationTimeout "180" ;
      ]
   ].
